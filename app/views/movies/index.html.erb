<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="highlight_header('title')">       
        <%= link_to "Movie Title",                         # Sort movies by title # class="hilite" #:class => ['hilite', 'p-3 mb-2 bg-warning text-dark']
          movies_path(params.merge(:sort => 'title')),
          :id => "title_header",
          :class => "#{'hilite p-3 mb-2 bg-warning text-dark' if params[:sort]=='title'}"%>
      </th> 
      <th>Rating</th>
      <th class="highlight_header('date')">
        <%= link_to "Release Date",                       # Sort by release date # class="hilite"
          movies_path(params.merge(:sort => 'date')),
          :id => "release_date_header",
          :class => "#{'hilite p-3 mb-2 bg-warning text-dark' if params[:sort]=='date'}"%>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>